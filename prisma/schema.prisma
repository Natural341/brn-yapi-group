generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model PortfolioItem {
  id          Int      @id @default(autoincrement())
  titleEn     String
  titleTr     String
  descriptionEn String  
  descriptionTr String  
  imageUrl    String?
  images      PortfolioImage[]
  category    String? // Keep for legacy or manual override
  serviceId   Int?
  service     Service? @relation(fields: [serviceId], references: [id])
  location    String?
  year        String?
  client      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PortfolioImage {
  id          Int           @id @default(autoincrement())
  url         String
  portfolioId Int
  portfolio   PortfolioItem @relation(fields: [portfolioId], references: [id], onDelete: Cascade)
}

model Message {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  phone     String?  // Added phone number
  service   String
  message   String  
  createdAt DateTime @default(now())
}

model Newsletter {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Service {
  id            Int      @id @default(autoincrement())
  slug          String   @unique
  icon          String
  imageUrl      String?
  titleTr       String
  titleEn       String
  descriptionTr String  
  descriptionEn String  
  contentTr     String  
  contentEn     String  
  
  // Portfolio Section on Service Detail Page
  servicePortfolioTitleEn String?
  servicePortfolioTitleTr String?
  servicePortfolioDescEn  String?
  servicePortfolioDescTr  String?
  
  portfolioItems PortfolioItem[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model SiteSettings {
  id             Int      @id @default(autoincrement())
  // Contact
  email          String
  phone          String
  phone2         String? // Added second phone number
  address        String
  contactTitleTr String
  contactTitleEn String
  contactDescTr  String  
  contactDescEn  String  
  
  // Hero Section
  heroTitleTr    String
  heroTitleEn    String
  heroSubtitleTr String
  heroSubtitleEn String

  // About Section
  aboutTitleTr   String
  aboutTitleEn   String
  aboutDescTr    String  
  aboutDescEn    String  
  aboutSectionTitleEn String? // "Our Philosophy"
  aboutSectionTitleTr String?

  // Contact Section (Let's Build...)
  contactMainTitleEn String?
  contactMainTitleTr String?

  // Portfolio Section (Homepage)
  portfolioTitleEn    String? // "Our Portfolio"
  portfolioTitleTr    String?
  portfolioSubtitleEn String? // "Selected Works"
  portfolioSubtitleTr String?
  portfolioDescEn     String? // "Each project..."
  portfolioDescTr     String?

  // Footer
  footerRightsTr String
  footerRightsEn String

  // Social Media
  instagram      String?
  linkedin       String?
  twitter        String?
  facebook       String?

  // Hero Image
  heroImageUrl   String?
  
  // Admin Credentials
  adminUsername  String   @default("admin")
  adminPassword  String   @default("123")

  // SEO Settings
  seoTitle       String?
  seoDescription String? 
  seoKeywords    String? 
  ogImage        String?

  updatedAt      DateTime @updatedAt
}

model Sponsor {
  id        Int      @id @default(autoincrement())
  name      String
  type      String   @default("TEXT") // "IMAGE" or "TEXT"
  content   String   // Image URL or Text content
  url       String?  // Optional link
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
